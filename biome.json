{
	"$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
  "files": {
    "include": [
      "pkgs/**/*.mts",
      "svcs/**/*.mts",
      "tests/**/*.mts",
      "utils/**/*.mts"
    ]
  },
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentSize": 2,
      "lineWidth": 80
    }
  }
}
