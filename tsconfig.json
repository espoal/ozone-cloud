{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "include": ["pkgs/**/*.mts", "svcs/**/*.mts","tests/**/*.mts", "utils/**/*.mts"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
